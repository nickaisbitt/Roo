# Token Bridge Service Environment Variables
# Copy this file to .env and update with your actual values

# Spreaker OAuth Credentials (Required)
SPREAKER_CLIENT_ID=your_spreaker_client_id_here
SPREAKER_CLIENT_SECRET=your_spreaker_client_secret_here
SPREAKER_REFRESH_TOKEN=your_current_refresh_token_here

# Bridge Service Security (Required)
# Generate a strong random secret: openssl rand -base64 32
BRIDGE_SECRET=your_really_strong_random_secret_here

# Bridge Service Configuration (Optional)
BRIDGE_PORT=5000
NODE_ENV=development

# For Main Application Integration
# Set these in your main application environment
TOKEN_BRIDGE_URL=http://localhost:5000
# BRIDGE_SECRET should be the same as above